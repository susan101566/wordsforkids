<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenboard"
    android:orientation="horizontal"
    android:layout_gravity="center" >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_weight="1"
        android:contentDescription="@string/teacher"
        android:onClick="teacherWordList"
        android:src="@drawable/teacher_title" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_weight="1"
        android:contentDescription="@string/student"
        android:onClick="studentWordList"
        android:src="@drawable/student_title" />

</LinearLayout>